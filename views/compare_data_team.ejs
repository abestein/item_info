<div class="card">
    <div class="card-header">
        Compare Data Team Active Items
        <div class="header-actions">
            <button type="button" class="btn btn-primary" id="refreshBtn">
                <i class="fas fa-sync"></i> Refresh Comparison
            </button>
        </div>
    </div>

    <div id="loadingSection" class="text-center p-4">
        <i class="fas fa-spinner fa-spin"></i> Loading comparison...
    </div>

    <div id="comparisonSection" style="display: none;">
        <div class="comparison-stats">
            <div class="stat-card new">
                <div class="stat-number" id="newCount">0</div>
                <div class="stat-label">New Records</div>
            </div>
            <div class="stat-card modified">
                <div class="stat-number" id="modifiedCount">0</div>
                <div class="stat-label">Modified Records</div>
            </div>
            <div class="stat-card deleted">
                <div class="stat-number" id="deletedCount">0</div>
                <div class="stat-label">Deleted Records</div>
            </div>
        </div>

        <div class="filters-section">
            <div class="filter-group">
                <label>Show Changes:</label>
                <select id="changeTypeFilter">
                    <option value="all">All Changes</option>
                    <option value="NEW">New Records Only</option>
                    <option value="MODIFIED">Modified Records Only</option>
                    <option value="DELETED">Deleted Records Only</option>
                </select>
            </div>
            <div class="filter-group">
                <label>Items per page:</label>
                <select id="itemsPerPage">
                    <option value="25">25</option>
                    <option value="50" selected>50</option>
                    <option value="100">100</option>
                    <option value="all">All</option>
                </select>
            </div>
        </div>

        <div class="bulk-actions">
            <button type="button" class="btn btn-warning" id="selectAllBtn">
                <i class="fas fa-check-square"></i> Select All Visible
            </button>
            <button type="button" class="btn btn-secondary" id="clearSelectionBtn">
                <i class="fas fa-square"></i> Clear Selection
            </button>
            <button type="button" class="btn btn-success" id="applySelectedBtn" disabled>
                <i class="fas fa-arrow-right"></i> Apply Selected Changes (<span id="selectedCount">0</span>)
            </button>
        </div>

        <div class="comparison-table-container">
            <table class="comparison-table" id="comparisonTable">
                <thead>
                    <tr>
                        <th width="40px">
                            <input type="checkbox" id="selectAllHeader">
                        </th>
                        <th width="80px">Change</th>
                        <th width="100px">Item Code</th>
                        <th width="150px">Brand Name</th>
                        <th width="200px">Description</th>
                        <th width="100px">Field</th>
                        <th width="200px">Current Value</th>
                        <th width="200px">New Value</th>
                        <th width="80px">Actions</th>
                    </tr>
                </thead>
                <tbody id="comparisonTableBody">
                    <!-- Dynamic content -->
                </tbody>
            </table>
        </div>

        <div class="pagination" id="pagination">
            <!-- Dynamic pagination -->
        </div>
    </div>

    <div id="noChangesSection" style="display: none;">
        <div class="info-message">
            <i class="fas fa-check-circle"></i>
            <h3>No Differences Found</h3>
            <p>The temp table and main table are identical. No changes to apply.</p>
        </div>
    </div>
</div>

<!-- Apply Changes Modal -->
<div class="modal" id="applyChangesModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Confirm Changes</h3>
            <button type="button" class="modal-close" id="closeModal">&times;</button>
        </div>
        <div class="modal-body">
            <p>You are about to apply <strong><span id="confirmCount">0</span></strong> changes to the main table.</p>
            <div class="change-summary" id="changeSummary">
                <!-- Dynamic summary -->
            </div>
            <div class="warning-message">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Warning:</strong> This action cannot be undone. Make sure you have reviewed all changes carefully.
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" id="cancelApplyBtn">Cancel</button>
            <button type="button" class="btn btn-danger" id="confirmApplyBtn">
                <i class="fas fa-check"></i> Apply Changes
            </button>
        </div>
    </div>
</div>

