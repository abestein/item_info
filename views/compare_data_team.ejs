<script>
let comparisonData = [];
let selectedChanges = new Set();
let currentPage = 1;
let itemsPerPage = 50;
let filteredData = [];

document.addEventListener('DOMContentLoaded', function() {
    loadComparison();

    // Event listeners
    document.getElementById('refreshBtn').addEventListener('click', loadComparison);
    document.getElementById('changeTypeFilter').addEventListener('change', filterData);
    document.getElementById('itemsPerPage').addEventListener('change', handleItemsPerPageChange);
    document.getElementById('selectAllBtn').addEventListener('click', selectAllVisible);
    document.getElementById('clearSelectionBtn').addEventListener('click', clearSelection);
    document.getElementById('applySelectedBtn').addEventListener('click', showApplyModal);
    document.getElementById('selectAllHeader').addEventListener('change', handleSelectAllHeader);

    // Modal event listeners
    document.getElementById('closeModal').addEventListener('click', hideApplyModal);
    document.getElementById('cancelApplyBtn').addEventListener('click', hideApplyModal);
    document.getElementById('confirmApplyBtn').addEventListener('click', applySelectedChanges);
});

async function loadComparison() {
    try {
        document.getElementById('loadingSection').style.display = 'block';
        document.getElementById('comparisonSection').style.display = 'none';
        document.getElementById('noChangesSection').style.display = 'none';

        const token = localStorage.getItem('token');
        const response = await fetch('/api/compare-data-team', {
            headers: {
                'Authorization': `Bearer ${token}`
            }
        });

        const result = await response.json();

        if (result.success) {
            comparisonData = result.differences;
            selectedChanges.clear();

            if (comparisonData.length === 0) {
                document.getElementById('loadingSection').style.display = 'none';
                document.getElementById('noChangesSection').style.display = 'block';
            } else {
                updateStats();
                filterData();
                document.getElementById('loadingSection').style.display = 'none';
                document.getElementById('comparisonSection').style.display = 'block';
            }
        } else {
            throw new Error(result.error);
        }
    } catch (error) {
        console.error('Error loading comparison:', error);
        document.getElementById('loadingSection').innerHTML = `
            <div class="error-message">
                <i class="fas fa-exclamation-circle"></i>
                Error loading comparison: ${error.message}
            </div>
        `;
    }
}

function updateStats() {
    const stats = comparisonData.reduce((acc, item) => {
        acc[item.change_type] = (acc[item.change_type] || 0) + 1;
        return acc;
    }, {});

    document.getElementById('newCount').textContent = stats.NEW || 0;
    document.getElementById('modifiedCount').textContent = stats.MODIFIED || 0;
    document.getElementById('deletedCount').textContent = stats.DELETED || 0;
}

function filterData() {
    const changeTypeFilter = document.getElementById('changeTypeFilter').value;

    filteredData = comparisonData.filter(item => {
        if (changeTypeFilter === 'all') return true;
        return item.change_type === changeTypeFilter;
    });

    currentPage = 1;
    renderTable();
}

function handleItemsPerPageChange() {
    itemsPerPage = document.getElementById('itemsPerPage').value;
    currentPage = 1;
    renderTable();
}

function renderTable() {
    const tbody = document.getElementById('comparisonTableBody');
    const start = itemsPerPage === 'all' ? 0 : (currentPage - 1) * parseInt(itemsPerPage);
    const end = itemsPerPage === 'all' ? filteredData.length : start + parseInt(itemsPerPage);
    const pageData = filteredData.slice(start, end);

    tbody.innerHTML = pageData.map(item => {
        const changeId = `${item.change_type}_${item.id}${item.field_name ? '_' + item.field_name : ''}`;
        const isSelected = selectedChanges.has(changeId);

        return `
            <tr class="${isSelected ? 'selected' : ''}" data-change-id="${changeId}">
                <td>
                    <input type="checkbox" class="row-checkbox" data-change-id="${changeId}" ${isSelected ? 'checked' : ''}>
                </td>
                <td>
                    <span class="change-badge ${item.change_type.toLowerCase()}">${item.change_type}</span>
                </td>
                <td class="value-cell">${item.item_code || '-'}</td>
                <td class="value-cell">${item.brand_name || '-'}</td>
                <td class="value-cell">${item.description1 || '-'}</td>
                <td class="value-cell">${item.field_name || 'All Fields'}</td>
                <td class="value-cell old-value">${item.current_value || '-'}</td>
                <td class="value-cell new-value">${item.new_value || '-'}</td>
                <td>
                    <button type="button" class="btn btn-sm btn-primary" onclick="viewDetails('${changeId}')">
                        <i class="fas fa-eye"></i>
                    </button>
                </td>
            </tr>
        `;
    }).join('');

    // Add event listeners to checkboxes
    tbody.querySelectorAll('.row-checkbox').forEach(checkbox => {
        checkbox.addEventListener('change', handleRowSelection);
    });

    renderPagination();
    updateSelectedCount();
}

function renderPagination() {
    if (itemsPerPage === 'all') {
        document.getElementById('pagination').innerHTML = '';
        return;
    }

    const totalPages = Math.ceil(filteredData.length / parseInt(itemsPerPage));
    const pagination = document.getElementById('pagination');

    if (totalPages <= 1) {
        pagination.innerHTML = '';
        return;
    }

    let html = `
        <button ${currentPage === 1 ? 'disabled' : ''} onclick="changePage(${currentPage - 1})">
            <i class="fas fa-chevron-left"></i>
        </button>
    `;

    for (let i = 1; i <= totalPages; i++) {
        if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) {
            html += `
                <button class="${i === currentPage ? 'active' : ''}" onclick="changePage(${i})">
                    ${i}
                </button>
            `;
        } else if (i === currentPage - 3 || i === currentPage + 3) {
            html += '<span>...</span>';
        }
    }

    html += `
        <button ${currentPage === totalPages ? 'disabled' : ''} onclick="changePage(${currentPage + 1})">
            <i class="fas fa-chevron-right"></i>
        </button>
    `;

    pagination.innerHTML = html;
}

function changePage(page) {
    currentPage = page;
    renderTable();
}

function handleRowSelection(event) {
    const changeId = event.target.dataset.changeId;
    const row = event.target.closest('tr');

    if (event.target.checked) {
        selectedChanges.add(changeId);
        row.classList.add('selected');
    } else {
        selectedChanges.delete(changeId);
        row.classList.remove('selected');
    }

    updateSelectedCount();
}

function handleSelectAllHeader(event) {
    const checkboxes = document.querySelectorAll('.row-checkbox');
    checkboxes.forEach(checkbox => {
        checkbox.checked = event.target.checked;
        checkbox.dispatchEvent(new Event('change'));
    });
}

function selectAllVisible() {
    const checkboxes = document.querySelectorAll('.row-checkbox');
    checkboxes.forEach(checkbox => {
        checkbox.checked = true;
        checkbox.dispatchEvent(new Event('change'));
    });
}

function clearSelection() {
    selectedChanges.clear();
    document.querySelectorAll('.row-checkbox').forEach(checkbox => {
        checkbox.checked = false;
    });
    document.querySelectorAll('tr.selected').forEach(row => {
        row.classList.remove('selected');
    });
    updateSelectedCount();
}

function updateSelectedCount() {
    const count = selectedChanges.size;
    document.getElementById('selectedCount').textContent = count;
    document.getElementById('applySelectedBtn').disabled = count === 0;
}

function showApplyModal() {
    if (selectedChanges.size === 0) return;

    document.getElementById('confirmCount').textContent = selectedChanges.size;

    // Generate summary
    const summary = Array.from(selectedChanges).reduce((acc, changeId) => {
        const [changeType] = changeId.split('_');
        acc[changeType] = (acc[changeType] || 0) + 1;
        return acc;
    }, {});

    const summaryHtml = Object.entries(summary)
        .map(([type, count]) => `<div>${type}: ${count} records</div>`)
        .join('');

    document.getElementById('changeSummary').innerHTML = summaryHtml;
    document.getElementById('applyChangesModal').style.display = 'block';
}

function hideApplyModal() {
    document.getElementById('applyChangesModal').style.display = 'none';
}

async function applySelectedChanges() {
    try {
        document.getElementById('confirmApplyBtn').disabled = true;
        document.getElementById('confirmApplyBtn').innerHTML = '<i class="fas fa-spinner fa-spin"></i> Applying...';

        const token = localStorage.getItem('token');
        const response = await fetch('/api/apply-data-team-changes', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`
            },
            body: JSON.stringify({
                changeIds: Array.from(selectedChanges)
            })
        });

        const result = await response.json();

        if (result.success) {
            hideApplyModal();
            loadComparison(); // Reload to show updated state
            alert(`Successfully applied ${result.appliedCount} changes!`);
        } else {
            throw new Error(result.error);
        }
    } catch (error) {
        console.error('Error applying changes:', error);
        alert(`Error applying changes: ${error.message}`);
    } finally {
        document.getElementById('confirmApplyBtn').disabled = false;
        document.getElementById('confirmApplyBtn').innerHTML = '<i class="fas fa-check"></i> Apply Changes';
    }
}

function viewDetails(changeId) {
    // Find the change data
    const change = comparisonData.find(item => {
        const itemChangeId = `${item.change_type}_${item.id}${item.field_name ? '_' + item.field_name : ''}`;
        return itemChangeId === changeId;
    });
    if (change) {
        alert(`Change Details:\n\nType: ${change.change_type}\nItem: ${change.item_code}\nField: ${change.field_name}\nCurrent: ${change.current_value}\nNew: ${change.new_value}`);
    }
}
</script>