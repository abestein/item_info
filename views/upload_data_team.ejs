<script>
let validatedData = null;

document.getElementById('uploadForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const formData = new FormData(this);
    const uploadBtn = document.getElementById('uploadBtn');
    const validationSection = document.getElementById('validationSection');
    const progressSection = document.getElementById('progressSection');
    const resultSection = document.getElementById('resultSection');
    const validationResults = document.getElementById('validationResults');
    const validationActions = document.getElementById('validationActions');

    // Hide all sections initially
    validationSection.style.display = 'none';
    progressSection.style.display = 'none';
    resultSection.style.display = 'none';
    uploadBtn.disabled = true;

    try {
        // First, validate the file
        validationResults.innerHTML = '<div class="validation-warning"><i class="fas fa-spinner fa-spin"></i> Validating Excel file...</div>';
        validationSection.style.display = 'block';

        const validateResponse = await fetch('/validate-data-team-excel', {
            method: 'POST',
            body: formData
        });

        const validation = await validateResponse.json();

        if (validation.success) {
            validationResults.innerHTML = `
                <div class="validation-success">
                    <i class="fas fa-check-circle"></i>
                    Validation Passed!
                    <div class="validation-details">
                        <strong>File Summary:</strong><br>
                        • Total rows: ${validation.summary.totalRows}<br>
                        • Valid item codes: ${validation.summary.validItemCodes}<br>
                        • Valid UPCs: ${validation.summary.validUPCs}<br>
                        • Ready for import to temp table
                    </div>
                </div>
            `;

            validatedData = validation.data;
            validationActions.style.display = 'block';

        } else {
            let errorHtml = `<div class="validation-error">
                <i class="fas fa-exclamation-circle"></i>
                Validation Failed!
                <div class="validation-details">`;

            if (validation.errors.duplicateItems && validation.errors.duplicateItems.length > 0) {
                errorHtml += `<div class="error-item">
                    <strong>Duplicate Item Codes Found:</strong><br>
                    ${validation.errors.duplicateItems.map(item => `Row ${item.row}: "${item.itemCode}"`).join('<br>')}
                </div>`;
            }

            if (validation.errors.duplicateUPCs && validation.errors.duplicateUPCs.length > 0) {
                errorHtml += `<div class="error-item">
                    <strong>Duplicate UPC Codes Found:</strong><br>
                    ${validation.errors.duplicateUPCs.map(upc => `Row ${upc.row}: "${upc.upcCode}" (${upc.column})`).join('<br>')}
                </div>`;
            }

            if (validation.errors.invalidUPCs && validation.errors.invalidUPCs.length > 0) {
                errorHtml += `<div class="error-item">
                    <strong>Invalid UPC Lengths Found:</strong><br>
                    ${validation.errors.invalidUPCs.map(upc => `Row ${upc.row}: "${upc.upcCode}" (${upc.column}) - Length: ${upc.length}`).join('<br>')}
                </div>`;
            }

            if (validation.errors.missingRequired && validation.errors.missingRequired.length > 0) {
                errorHtml += `<div class="error-item">
                    <strong>Missing Required Fields:</strong><br>
                    ${validation.errors.missingRequired.map(field => `Row ${field.row}: Missing ${field.field}`).join('<br>')}
                </div>`;
            }

            errorHtml += `</div></div>`;
            validationResults.innerHTML = errorHtml;
            validationActions.style.display = 'none';
        }

    } catch (error) {
        validationResults.innerHTML = `<div class="validation-error"><i class="fas fa-exclamation-circle"></i> Validation Error: ${error.message}</div>`;
        validationActions.style.display = 'none';
    } finally {
        uploadBtn.disabled = false;
    }
});

document.getElementById('proceedBtn').addEventListener('click', async function() {
    if (!validatedData) return;

    const progressSection = document.getElementById('progressSection');
    const resultSection = document.getElementById('resultSection');
    const validationSection = document.getElementById('validationSection');
    const progressFill = document.getElementById('progressFill');
    const progressPercent = document.getElementById('progressPercent');
    const progressRows = document.getElementById('progressRows');
    const statusMessage = document.getElementById('statusMessage');
    const resultMessage = document.getElementById('resultMessage');

    // Show progress, hide validation
    validationSection.style.display = 'none';
    progressSection.style.display = 'block';
    resultSection.style.display = 'none';

    try {
        statusMessage.textContent = 'Importing data to temp table...';

        const importResponse = await fetch('/import-data-team-temp', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                data: validatedData,
                clearTable: document.getElementById('clearTable').checked
            })
        });

        const result = await importResponse.json();

        if (result.success) {
            progressFill.style.width = '100%';
            progressPercent.textContent = '100%';
            progressRows.textContent = `${result.totalRows} rows processed`;
            statusMessage.textContent = 'Import completed successfully!';

            resultMessage.innerHTML = `
                <div class="success">
                    <i class="fas fa-check-circle"></i>
                    Success! Data imported to temp table
                    <br>
                    ✓ ${result.totalRows} rows imported to data_team_active_items_temp
                    <br>
                    <strong>Next Steps:</strong>
                    <ul>
                        <li>Review the imported data</li>
                        <li>Run comparison with original table</li>
                        <li>Confirm changes to apply to main table</li>
                    </ul>
                </div>
            `;
        } else {
            throw new Error(result.error || 'Import failed');
        }

    } catch (error) {
        statusMessage.textContent = 'Import failed!';
        resultMessage.innerHTML = `<div class="error"><i class="fas fa-exclamation-circle"></i> Error: ${error.message}</div>`;
    } finally {
        resultSection.style.display = 'block';
    }
});

document.getElementById('cancelBtn').addEventListener('click', function() {
    const validationSection = document.getElementById('validationSection');
    const uploadBtn = document.getElementById('uploadBtn');

    validationSection.style.display = 'none';
    uploadBtn.disabled = false;
    validatedData = null;
});
</script>